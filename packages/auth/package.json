{
    "name": "@repo/auth",
    "version": "1.0.0",
    "description": "Better Auth configuration shared across services",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/auth-client.d.ts",
            "import": "./dist/auth-client.js",
            "require": "./dist/auth-client.js"
        }
    },
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rm -rf dist",
        "check-types": "tsc --noEmit",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@repo/db": "workspace:*",
        "better-auth": "^1.3.7"
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^24.3.1",
        "typescript": "^5.8.2"
    }
}

{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": [
                ".next/**", 
                "!.next/cache/**",
                "dist/**",
                "build/**"
            ]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "check-types": {
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        }
    }
}
